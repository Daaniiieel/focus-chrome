{
  "name": "Focus for Kodular Creator",
  "version": "1.0.3",
  "description": "Hide navigation bars and focus on what you're doing in Kodular Creator.",
  "permissions": ["activeTab", "declarativeContent", "storage"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/focus16.png",
      "32": "icons/focus32.png",
      "48": "icons/focus48.png",
      "128": "icons/focus128.png"
    }
  },
  "icons": {
    "16": "icons/focus16.png",
    "32": "icons/focus32.png",
    "48": "icons/focus48.png",
    "128": "icons/focus128.png"
  },
  "manifest_version": 2
}
